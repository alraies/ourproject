@model IEnumerable<p00.Models.CommitHees>

@{
    ViewBag.Title = "اللجان";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمة اللجان</h2>

<p>
   
    <button type="button" class="btn btn-default"> @Html.ActionLink("انشاء لجنة جديدة", "Create")</button>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">قائمة اللجان</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.comitname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.comitDecipt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.comitpriod)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.comittype)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.isActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.comitname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.comitDecipt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.comitpriod)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.comittype)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isActive)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success"> @Html.ActionLink("تعديل", "Edit", new { id = item.id })</button>
                                        <button type="button" class="btn btn-default">@Html.ActionLink("التفاصيل", "Details", new { id = item.id })</button>
                                        <button type="button" class="btn btn-danger">@Html.ActionLink("حذف", "Delete", new { id = item.id })</button>

                                    </div>
                                   
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>