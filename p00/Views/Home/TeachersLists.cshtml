@model IEnumerable<p00.Models.Teacher>

@{
    ViewBag.Title = "TeachersLists";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قوائم الاساتذه</h2>
@using (Html.BeginForm("TeachersLists", "Home", FormMethod.Post))
{
    <input type="text" name="searchName"  id="searchName"
           placeholder="ابحث هنا.." />
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.University)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.College)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GeneralSpecialization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScientificTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ST_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ST_Doner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.College)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneralSpecialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ST_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ST_Doner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                | @Html.ActionLink("عرض تقيم", "ShowAssent", new { id = item.Id }) |

            </td>
        </tr>
    }

</table>
