@model IEnumerable<p00.Models.Sections>

@{
    ViewBag.Title = "المحاور";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمة المحاور</h2>

<p>

    <button type="button" class="btn btn-default"> @Html.ActionLink("انشاء محور جديد", "Create")</button>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning">
                <h3 class="card-title "> محاور استمارة التقييم</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="بحث">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr class="bg-warning">
                            <th>
                                @Html.DisplayNameFor(model => model.SectionName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalPoints)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SectionName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPoints)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success"> @Html.ActionLink("تعديل", "Edit", new { id = item.Id })</button>
                                    <button type="button" class="btn btn-default">@Html.ActionLink("التفاصيل", "Details", new { id = item.Id })</button>
                                    <button type="button" class="btn btn-danger">@Html.ActionLink("حذف", "Delete", new { id = item.Id })</button>

                                </div>

                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
