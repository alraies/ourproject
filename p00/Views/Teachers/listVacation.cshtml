@model IEnumerable<p00.Models.Teacher>

@{
    ViewBag.Title = "listVacation";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>listVacation</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.University)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.College)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
  
        <th>
            @Html.DisplayNameFor(model => model.ScientificTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vacation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.University)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.College)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScientificTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vacation)
        </td>
        <td>
          |  @if (item.Vacation == false)
          {
              @Html.ActionLink("تفعيل الاجازه", "Activatethevacation", new { id = item.Id })
          }
          else
          {
              @Html.ActionLink("لغاء الاجازه", "Cancellationofleave", new { id = item.Id })
            }|
        </td>
    </tr>
}

</table>
