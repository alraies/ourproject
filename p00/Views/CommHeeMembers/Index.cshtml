}

    <h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    <div>
        <div>
            <h3 class="box-title">قائمة الاساتذة</h3>
        </div><!-- /.box-header -->
        <div>
            <table id="example1" class="table table-bordered table-hover">
